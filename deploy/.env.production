# =============================================================================
# PRODUCTION Environment Configuration
# Copy this file to .env on your VPS and update ALL values
# =============================================================================

# Flask Settings - MUST be 'production' for VPS
FLASK_APP=manage.py
FLASK_ENV=production

# Security - CRITICAL: Generate a strong secret key!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_THIS_TO_A_64_CHARACTER_RANDOM_STRING

# Database - Update password for production!
POSTGRES_USER=elearn_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
POSTGRES_DB=elearn_db
DATABASE_URL=postgresql://elearn_user:CHANGE_THIS_TO_A_STRONG_PASSWORD@db:5432/elearn_db

# WhatsApp Bot API
WA_API_URL=http://wabot:3000

# Google Drive Integration (if used)
GOOGLE_DRIVE_ROOT_FOLDER_ID=your-drive-folder-id
GOOGLE_OAUTH_CLIENT_ID=your-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-oauth-client-secret
GOOGLE_OAUTH_REFRESH_TOKEN=your-oauth-refresh-token

# Timezone
TZ=Asia/Jakarta
