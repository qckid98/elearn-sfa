# =============================================================================
# Environment Configuration for elearn-sfa
# Copy this file to .env and update the values
# =============================================================================

# Flask Settings
FLASK_APP=manage.py
FLASK_ENV=development
# Set to 'production' on VPS:
# FLASK_ENV=production

# Security - IMPORTANT: Generate a strong secret key for production!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Database (matches docker-compose.yaml)
# For Docker: postgresql://postgres:postgres@db:5432/fashion_db
# For local dev: postgresql://postgres:yourpassword@localhost:5432/fashion_db
DATABASE_URL=postgresql://postgres:postgres@db:5432/fashion_db

# Database credentials (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fashion_db

# WhatsApp Bot API (container name from docker-compose)
WA_API_URL=http://wabot:3000

# Google Drive Integration
GOOGLE_DRIVE_ROOT_FOLDER_ID=your-drive-folder-id
GOOGLE_OAUTH_CLIENT_ID=your-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-oauth-client-secret
GOOGLE_OAUTH_REFRESH_TOKEN=your-oauth-refresh-token

# Timezone
TZ=Asia/Jakarta
